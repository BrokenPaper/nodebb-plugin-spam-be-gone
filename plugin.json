{
	"id": "nodebb-plugin-spam-be-gone",
	"name": "Spam Be Gone",
	"description": "anti spam using both Akismet.com and StopForumSpam.com",
	"url": "https://github.com/akhoury/nodebb-plugin-spam-be-gone",
	"library": "./library.js",
	"templates": "templates",

    "hooks": [
        {"hook": "action:app.load", "method": "load"},
        {"hook": "filter:admin.header.build", "method": "admin.menu"},

        {"hook": "filter:user.create", "method": "checkUser", "priority": 5},
        {"hook": "filter:topic.reply", "method": "checkReply", "priority": 5}
    ],

    "minver": "0.4.2",
    "faIcon": "fa-shield",
	"pluginSettings": {
        "akismetEnabled": {
            "type": "boolean",
            "defaultsTo": true
        },
		"akismetApiKey": {
            "required": true,
            "defaultsTo": "",
            "jsType": "string"
        },
        "honeypotEnabled": {
            "type": "boolean",
            "defaultsTo": true
        },
		"honeypotApiKey": {
            "required": true,
            "defaultsTo": "",
            "jsType": "string"
        },
		"logging": "0"
	}
}